{
    "compilerOptions": {
        "rootDir": "src/scripts",
        "outDir": "dist/scripts",
        "target": "es2015",
        "downlevelIteration": true,
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
